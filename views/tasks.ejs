<!DOCTYPE html>
<html lang="en">

  <head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>BlackBoard</title>

    <!-- Bootstrap core CSS-->
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <!-- Page level plugin CSS-->
    <link href="vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">
    

    <!-- Custom styles for this template-->
    <link href="css/sb-admin.css" rel="stylesheet">

  </head>

  <body id="page-top">

    <%- include('header') %>

    <div id="wrapper">

      <!-- Sidebar -->
      <%- include('sidebar') %>

      <div id="content-wrapper">

        <div class="container-fluid">

          <div class="list-group">

                  <% for(i=0; i< taskAdmin.length; i++){ 
                            let color = ""
                            if(taskAdmin[i].dateCloture){
                              color = "bg-success"
                            } else if(!taskAdmin[i].dateCloture && Date.now() > taskAdmin[i].dateDue) {
                              color = "bg-danger" }
                              %>
                           
                                <a href="#" class="list-group-item list-group-item-action <%=color%>">
                                    <div class="d-flex w-100 justify-content-between ">
                                      <h5 class="mb-1"><%= taskAdmin[i].name %></h5>
                                      <small><%= dateFormat(taskAdmin[i].dateInsert) %></small>
                                    </div>
                                    <p class="mb-1"><%= taskAdmin[i].category %></p>

                                    <% if(taskAdmin[i].dateCloture){ %>
                                      <small><i class="fas fa-check-square"></i> Cloturée le: <%= dateFormat(taskAdmin[i].dateCloture) %></small>
                                    <% } else if(!taskAdmin[i].dateCloture && Date.now() > taskAdmin[i].dateDue) { %>
                                      <small><i class="fas fa-exclamation-circle"></i> Echéance dépassée : <%= dateFormat(taskAdmin[i].dateDue) %></small>
                                    <% } else { %>
                                      <small>Echéance : <%= dateFormat(taskAdmin[i].dateDue) %></small>
                                    <% } %>                                                                                                    
                                </a>
                              
                 <% } %>
         

          </div>


        </div>
        <!-- /.container-fluid -->

        <!-- Sticky Footer -->
        <footer class="sticky-footer">
          <div class="container my-auto">
            <div class="copyright text-center my-auto">
              <span>Copyright © Blackboard</span>
            </div>
          </div>
        </footer>

      </div>
      <!-- /.content-wrapper -->

    </div>
    <!-- /#wrapper -->



    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Page level plugin JavaScript-->
    <script src="vendor/chart.js/Chart.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin.min.js"></script>

  </body>

</html>
